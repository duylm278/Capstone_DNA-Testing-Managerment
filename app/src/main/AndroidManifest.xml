<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="capstone.summer"
    android:windowSoftInputMode="adjustPan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_adn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_adn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".project.activity.ResultActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".project.activity.TestPagination" />
        <activity android:name=".project.activity.SampleActivity" />
        <activity android:name=".project.activity.ExtractStepActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".project.activity.PCRStepActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".project.activity.ElectrophoresisStepActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".project.activity.PurifyStepActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".project.activity.ProcessActivity"
            android:label="@string/title_activity_process"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".project.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>